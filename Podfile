source 'https://github.com/CocoaPods/Specs.git'
source 'https://github.com/shvets/Specs.git'

use_frameworks!

target 'MyHitSite_iOS' do
  platform :ios, '10.0'

  podspec :path => 'MyHitSite.podspec'

  target 'MyHitSite_iOSTests' do
    inherit! :search_paths
  end
end

target 'MyHitSite_tvOS' do
  platform :tvos, '10.10'

  podspec :path => 'MyHitSite.podspec'

  target 'MyHitSite_tvOSTests' do
    inherit! :search_paths
  end
end

